{
  "name": "team-flow",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev": "concurrently -n gateway,web -c blue,green \"pnpm --filter gateway dev\" \"pnpm --filter web dev\"",
    "dev:api": "pnpm --filter api dev",
    "dev:gateway": "pnpm --filter gateway dev",
    "dev:auth": "pnpm --filter auth dev",
    "dev:web": "pnpm --filter web dev",
    "dev:all": "pnpm --parallel --filter \"./apps/**\" dev",
    "build": "pnpm --filter gateway build && pnpm --filter auth build && pnpm --filter web build",
    "build:api": "pnpm --filter api build",
    "build:gateway": "pnpm --filter gateway build",
    "build:auth": "pnpm --filter auth build",
    "build:web": "pnpm --filter web build",
    "build:all": "pnpm --filter \"./apps/**\" build",
    "start": "concurrently -n gateway,web -c blue,green \"pnpm --filter gateway start\" \"pnpm --filter web start\"",
    "start:api": "pnpm --filter api start",
    "start:gateway": "pnpm --filter gateway start",
    "start:auth": "pnpm --filter auth start",
    "start:web": "pnpm --filter web start",
    "clean": "rimraf \"apps/apis/**/dist\" \"apps/web/.next\"",
    "clean:all": "pnpm --parallel --filter \"./apps/**\" clean && rimraf node_modules",
    "test": "jest --projects apps/apis/auth apps/apis/gateway",
    "test:auth": "pnpm --filter auth test",
    "test:gateway": "pnpm --filter gateway test",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config jest.e2e.config.js",
    "test:ci": "jest --coverage --ci --maxWorkers=2",
    "lint": "eslint \"{apps,packages}/**/*.{ts,tsx}\"",
    "format": "prettier --write \"{apps,packages}/**/*.{ts,tsx,js,json,md}\"",
    "format:check": "prettier --check \"{apps,packages}/**/*.{ts,tsx,js,json,md}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@swc/core": "^1.15.2",
    "@swc/jest": "^0.2.39",
    "@trivago/prettier-plugin-sort-imports": "^6.0.0",
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "concurrently": "^9.0.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
